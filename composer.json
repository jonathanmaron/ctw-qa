{
    "name": "ctw/ctw-qa",
    "description": "Configuration for commonly used quality assurance (QA) tools for PHP projects.",
    "license": "proprietary",
    "type": "library",
    "require": {
        "php": "^8.3",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "rector/rector": "^2.2",
        "symplify/easy-coding-standard": "^13.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "symfony/var-dumper": "^7.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Ctw\\Qa\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CtwTest\\Qa\\": "test"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "ecs": "php vendor/bin/ecs --clear-cache",
        "ecs-fix": "php vendor/bin/ecs --clear-cache --fix",
        "phpstan": "d=build/phpstan ; rm -fr $d ; mkdir -p $d ; php vendor/bin/phpstan analyse --error-format=raw | tee $d/output.txt",
        "phpstan-baseline": "php vendor/bin/phpstan analyse --generate-baseline",
        "qa": [
            "@rector",
            "@ecs",
            "@phpstan"
        ],
        "qa-fix": [
            "@rector-fix",
            "@ecs-fix",
            "@phpstan"
        ],
        "rector": "php vendor/bin/rector process --clear-cache --dry-run",
        "rector-fix": "php vendor/bin/rector process --clear-cache",
        "test": "php vendor/bin/phpunit"
    }
}
